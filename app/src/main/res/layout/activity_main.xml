<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="BUOI THUC HANH THU 6 - BAI 1"
        android:textSize="22sp"
        android:textColor="#FF0101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nhap vao dia chi cua mot trang web"
        android:textSize="18sp"
        android:textColor="#0123FF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL: "
            android:textColor="#0123FF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:hint="http://www.wrox.com"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnDuyetWeb"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="DUYET WEB"
            android:backgroundTint="#9F9D9D"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btnLoaiKetNoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOAI KET NOI"
            android:backgroundTint="#9F9D9D"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#FF0101"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtNetworkInfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#0123FF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>